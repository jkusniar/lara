{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "POSTGRES_PASSWORD": "postgres"
        }
    },
    "tasks": [
        {
            "taskName": "lara all tests",
            "type": "shell",
            "command": "go test -v ./...",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "taskName": "lara install",
            "type": "shell",
            "command": "go install -v github.com/jkusniar/lara/cmd/lara",
            "problemMatcher": [
                "$go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}